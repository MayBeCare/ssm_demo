    </aop:config>-->

    <!--spring定时任务 -->
    <task:scheduled-tasks scheduler="myScheduler">
        <task:scheduled ref="taskService" method="taskJob" cron="0/3 * * * * ?" />
    </task:scheduled-tasks>

    <task:scheduler id="myScheduler" pool-size="5"/>

</beans>